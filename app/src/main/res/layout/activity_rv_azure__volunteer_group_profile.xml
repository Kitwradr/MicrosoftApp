<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RvAzure_VolunteerGroupProfile">

    <android.support.v7.widget.CardView
        android:id="@+id/volunteer_profile_card"
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="500dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0.7dp"
        app:cardMaxElevation="1dp"
        app:cardBackgroundColor="@android:color/white"
        app:contentPaddingBottom="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/v_team_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/volunteergroup"/>
                <TextView
                    android:id="@+id/vteam_name"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:textSize="20dp"
                    android:layout_margin="1dp"
                    android:gravity="center_vertical"
                    android:background="#CC263238"
                    android:textAllCaps="true"
                    android:layout_alignBottom="@id/v_team_image"
                    android:textColor="@android:color/white"
                    android:text="  TEAM ALPHA ONE"/>

            </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:fillViewport="true"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/vteam_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#DD7C4DFF"
                    android:textSize="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="DESCRIPTION:The purpose of our mission is to help victims stuck in Kerala Floods. We wish to help deliver food packets and other accesories. Come join us in our noble cause"
                    android:justificationMode="inter_word"
                    android:layout_weight="0.60"/>

                <TextView
                    android:id="@+id/vteam_teamlead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:text="STARTED BY: JON SMITH"
                    android:layout_weight="0.45"/>



                <TextView
                    android:id="@+id/vteam_start_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:text="START LOCATION: KENGERI"
                    android:layout_weight="0.45"/>
                <TextView
                    android:id="@+id/vteam_destination_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:text="DESTINATION: Thiruvananthapuram"
                    android:layout_weight="0.45"/>

                <TextView
                    android:id="@+id/vteam_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:text="START DATE: 25/8/18"
                    android:layout_weight="0.45"/>


                <TextView
                    android:id="@+id/vteam_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:text="EXPECTED DURATION: 2-3 weeks" />



                <TextView
                    android:id="@+id/vteam_number_of_male_members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:text="MALE MEMBERS: 5"
                    android:layout_weight="0.45"/>


                <TextView
                    android:id="@+id/vteam_number_of_female_members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textAllCaps="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:text="FEMALE MEMBERS: 3"
                    android:layout_weight="0.45"/>

            </LinearLayout>
        </ScrollView>

            <Button
                android:id="@+id/vteam_request_to_join"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:background="@drawable/oval_button"
                android:text="REQUEST TO JOIN"
                android:drawableBottom="@drawable/ic_phone_black_24dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/white"
                android:layout_height="0dp"
                android:layout_weight="0.2"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>







</LinearLayout>