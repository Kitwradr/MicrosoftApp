<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sos"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0.7dp"
        app:cardMaxElevation="1dp"
        app:cardBackgroundColor="@android:color/white"
        app:contentPaddingBottom="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:text="TAP TO CALL"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="100dp">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:id="@+id/police"
                    android:src="@drawable/police"
                    android:background="@android:color/white"
                    android:layout_height="match_parent" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:src="@drawable/ambulance"
                    android:id="@+id/ambulance"
                    android:layout_height="match_parent" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@android:color/white"
                    android:src="@drawable/firebrigade"
                    android:id="@+id/firebrigade"
                    android:layout_height="match_parent" />


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0.7dp"
        app:cardMaxElevation="1dp"
        app:cardBackgroundColor="@android:color/white"
        app:contentPaddingBottom="0dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:layout_gravity="center_vertical"
                android:text="TAP TO EDIT"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="100dp">


                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_weight="1.5"
                        android:id="@+id/contactimage1"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:background="@android:color/white"
                        android:src="@drawable/ic_person_add_black_24dp"
                        android:layout_height="0dp" />
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/contact1"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="contact 1"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:id="@+id/contactimage2"
                        android:background="@android:color/white"
                        android:src="@drawable/ic_person_add_black_24dp"
                        android:layout_height="0dp" />
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/contact2"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="contact 2"/>


                </LinearLayout>



                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_weight="1.5"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:id="@+id/contactimage3"
                        android:background="@android:color/white"
                        android:src="@drawable/ic_person_add_black_24dp"
                        android:layout_height="0dp" />
                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/contact3"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="contact 3"/>


                </LinearLayout>

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_menu_send"
                android:background="@android:color/white"
                android:id="@+id/floatb"
                android:backgroundTint="@android:color/white"
                android:layout_gravity="center"/>




        </LinearLayout>

    </android.support.v7.widget.CardView>





</LinearLayout>
